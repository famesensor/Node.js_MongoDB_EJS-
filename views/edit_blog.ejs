<% include ./partials/header%>

<div class="container">
    <div class="row no-gutters m-30">
        <div class="col-xs-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
            <div class="post-contant box-shadow p-30">
                <h3><span ><i class="fas fa-clipboard"></i></span> EDIT BLOG</h3>
                <!-- Edit form -->
                <form action="/blogs/edit/<%= blog._id %>" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="title" required="required" value="<%= blog.title %>" >
                    </div>
                    <div class="form-group">
                    <label>Photo</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="image" name="image" accept=".jpg, .jpeg" >
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select name="category" class="custom-select mb-3" required="required" >
                            <option value="<%= blog.category %>"><%= blog.category %></option>
                            <option value="culture">Culture</option>
                            <option value="environment">Environment</option>
                            <option value="city">City</option>
                            <option value="adventure">Adventure</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="comment">Contant</label>
                        <textarea class="form-control" rows="5" id="comment" name="body"><%= blog.body %></textarea>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-secondary">Submit</button>&nbsp;&nbsp;   
                    </div>
                </form>
                <div class="d-flex justify-content-end"></div>
                    <a href="/blogs/<%= blog._id %>"><button type="submit" class="btn btn-danger">Canceled</button></a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer%>